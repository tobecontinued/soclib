
# -*- python -*-

class caba(VciCabaComponent):
	classname = 'VciXCache'
	header_files = 'include/caba/initiator/vci_xcache.h',
	implementation_files = 'src/caba/initiator/vci_xcache.cc',
	tmpl_parameters = VciCabaComponent.tmpl_parameters + [
		'write_fifo_depth',
		'icache_lines', 'icache_words', 'dcache_lines', 'dcache_words']
	tmpl_instanciation = '%(write_fifo_depth)d,'+\
						 '%(icache_lines)s,%(icache_words)d,'+\
						 '%(dcache_lines)s,%(dcache_words)d,'+\
						 VciCabaComponent.tmpl_instanciation
	uses = [
		Uses('mapping_table'),
		]
	default_parameters = {
		'write_fifo_depth':8
		}
