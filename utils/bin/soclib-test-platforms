sb=$(dirname $0)
if [ "${sb:0:1}" != "/" ] ; then
	sb=${PWD}/${sb}
fi

SOCLIB_DIR=$(dirname $(dirname ${sb}))

cd ${SOCLIB_DIR}
svn up

export PATH=${SOCLIB_DIR}/utils/bin:$PATH
export SOCLIB_TTY=TERM
export SOCLIB_FB=HEADLESS

cd ${SOCLIB_DIR}/utils/test
make -k clean
make -k

cd ${SOCLIB_DIR}/soclib/platform/topcells
make -k soft_clean
make test || exit 1

cd ${SOCLIB_DIR}/soclib/platform/runtime_netlist/cpu_test
make -k clean
make || exit 1

exit 0
