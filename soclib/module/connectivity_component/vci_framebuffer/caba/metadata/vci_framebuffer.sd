
# -*- python -*-

Module('caba:vci_framebuffer',
	   classname = 'soclib::caba::VciFrameBuffer',
	   tmpl_parameters = [
	parameter.Module('vci_param',  default = 'vci_param'),
	],
	   header_files = ['../source/include/vci_framebuffer.h',],
	   implementation_files = ['../source/src/vci_framebuffer.cpp',],
	   ports = [
	Port('vci_target', 'p_vci'),
	Port('bit_in', 'p_resetn', auto = 'resetn'),
	Port('clock_in', 'p_clk', auto = 'clock'),
	],
	   uses = [
	Uses('base_module'),
	Uses('vci_target_fsm', default_target = 'true', support_llsc = 'false'),
	Uses('common:fb_controller'),
	],
	instance_parameters = [
	parameter.IntTab('ident'),
	parameter.Module('mt', 'common:mapping_table', auto='env:mapping_table'),
	parameter.Int('width'),
	parameter.Int('height'),
	],
	   extensions = [
	'dsx:addressable=ident',
	'dsx:max_segments=1',
	'dsx:get_ident=ident:p_vci',
   ],
)
