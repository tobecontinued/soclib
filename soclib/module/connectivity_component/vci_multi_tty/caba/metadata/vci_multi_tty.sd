
# -*- python -*-

Module('caba:vci_multi_tty',
	   classname = 'soclib::caba::VciMultiTty',
	   tmpl_parameters = [
	parameter.Module('vci_param',  default = 'vci_param'),
	],
	   header_files = ['../source/include/vci_multi_tty.h',
					   '../../include/tty.h'
					   ],
	   implementation_files = ['../source/src/vci_multi_tty.cpp',],
	   ports = [
	Port('vci_target', 'p_vci'),
	Port('bit_in', 'p_resetn', auto = 'resetn'),
	Port('bit_out', 'p_irq', 1),
	Port('clock_in', 'p_clk', auto = 'clock'),
	],
	   uses = [
	Uses('base_module'),
	Uses('common:process_wrapper'),
	Uses('common:tty_wrapper') ,
	Uses('vci_target_fsm', default_target = 'true', support_llsc = 'false'),
	],
	instance_parameters = [
		parameter.IntTab('ident'),
        parameter.Module('mt', typename = 'common:mapping_table', auto = 'env:mapping_table'),
        parameter.StringArray('names'),
	],
	   extensions = [
	'dsx:addressable=ident',
	'dsx:get_ident=ident:p_vci',
	'dsx:max_segments=1',
	'dsx:device=tty',
   ],
)
