	tmpl_parameters = [
	parameter.Module('vci_param',  default = 'vci_param'),
	],
	header_files = ['../source/include/vci_vgmn.h',],
	implementation_files = ['../source/src/vci_vgmn.cpp',],
	ports = [
	    Port('vci_initiator', 'p_to_target', parameter.Reference('n_target')),
