		Port('clock_in', 'p_clk', auto = 'clock'),
	],
	instance_parameters = [
        parameter.Module('mt', typename = 'common:mapping_table', auto = 'env:mapping_table'),
        parameter.Int('n_initiator'),
        parameter.Int('n_target'),
        parameter.Int('min_latency'),
        parameter.Int('fifo_depth'),
	],
	uses = [
		Uses('base_module'),
		Uses('common:mapping_table'),
		],
	   extensions = [
	'dsx:interconnect=root',
	],
)
