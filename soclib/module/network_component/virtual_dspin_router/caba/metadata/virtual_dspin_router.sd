		parameter.Int('y_adressing_offset'),
		parameter.Int('y_adressing_size'),
		parameter.Int('eop_offset', default = 0),
		parameter.Int('broadcast_offset'),
		parameter.Int('in_fifo_size'),
		parameter.Int('out_fifo_size'),
