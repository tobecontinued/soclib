
# -*- python -*-

Module('caba:iss_wrapper',
	   classname = 'soclib::caba::IssWrapper',
	   header_files = ["../source/include/iss_wrapper.h",],
	   implementation_files = [
	"../source/src/iss_wrapper.cpp",
	],
	   tmpl_parameters = [
	parameter.Module('iss_t'),
	],
	   ports = [
	Port('caba:xcache_processor_icache', 'p_icache'),
	Port('caba:xcache_processor_dcache', 'p_dcache'),
	Port('caba:bit_in', 'p_irq', parameter.Constant('n_irq')),
	Port('caba:bit_in', 'p_resetn', auto = 'resetn'),
	Port('caba:clock_in', 'p_clk', auto = 'clock'),
	],
	   uses = [
	Uses('caba:base_module'),
	Uses('common:iss'),
	],
	instance_parameters = [
	parameter.Int('ident'),
	],
	   extensions = [
	'dsx:cpu=wrapper:iss_t',
	'dsx:mapping_type=processor',
	'dsx:config_lines=%(ref)s.setCacheInfo(%(cache)s.getCacheInfo())',
	'dsx:get_peer_name=cache:p_icache',
   ],
)
