
# -*- python -*-

Module('caba:vci_mwmr_controller',
	classname = 'soclib::caba::VciMwmrController',
	header_files = ['../source/include/vci_mwmr_controller.h',
					'../../include/mwmr_controller.h',
					],
	implementation_files = ['../source/src/vci_mwmr_controller.cpp',],
	   tmpl_parameters = [
	parameter.Module('vci_param',  default = 'vci_param'),
	],
			  ports = [
	Port('vci_target', 'p_vci_target'),
	Port('vci_initiator', 'p_vci_initiator'),
	Port('fifo_input', 'p_from_coproc', parameter.Reference('n_from_coproc')),
	Port('fifo_output', 'p_to_coproc', parameter.Reference('n_to_coproc')),
	Port('word_out', 'p_config', parameter.Reference('n_config'), word_t = 'uint32_t'),
	Port('word_in', 'p_status', parameter.Reference('n_status'), word_t = 'uint32_t'),
	Port('bit_in', 'p_resetn', auto = 'resetn'),
	Port('clock_in', 'p_clk', auto = 'clock'),
	],
	uses = [
		Uses('base_module'),
		Uses('caba:generic_fifo', data_t = 'uint32_t'),
		Uses('vci_target_fsm', default_target = 'true', support_llsc = 'false'),
		],
	instance_parameters = [
        parameter.Module('mt', typename = 'common:mapping_table', auto = 'env:mapping_table'),
		parameter.IntTab('srcid'),
		parameter.IntTab('tgtid'),
        parameter.Int('plaps'),
        parameter.Int('fifo_to_coproc_depth'),
        parameter.Int('fifo_from_coproc_depth'),
        parameter.Int('n_to_coproc'),
        parameter.Int('n_from_coproc'),
        parameter.Int('n_config'),
        parameter.Int('n_status'),
        parameter.Bool('use_llsc'),
	],
	   extensions = [
	'dsx:addressable=tgtid',
	'dsx:get_ident=tgtid:p_vci_target,srcid:p_vci_initiator',
	'dsx:max_segments=1',
   ],
)
