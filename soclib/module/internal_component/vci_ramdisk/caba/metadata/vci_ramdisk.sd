
# -*- python -*-

Module('caba:vci_ramdisk',
	classname = 'soclib::caba::VciRamDisk',
	   tmpl_parameters = [
	parameter.Module('vci_param',  default = 'vci_param'),
	],
	header_files = ['../source/include/vci_ramdisk.h',],
	implementation_files = ['../source/src/vci_ramdisk.cpp',],
			  ports = [
	Port('vci_target', 'p_vci'),
	Port('bit_in', 'p_resetn', auto = 'resetn'),
	Port('clock_in', 'p_clk', auto = 'clock'),
	],
	uses = [
		Uses('base_module'),
		Uses('vci_target_fsm', default_target = 'true', support_llsc = 'true'),
		Uses('common:mapping_table'),
		],
	instance_parameters = [
	parameter.IntTab('ident'),
	parameter.Module('mt', 'common:mapping_table', auto='env:mapping_table'),
	parameter.String('filename',),
	],
	   extensions = [
	'dsx:addressable=ident',
	'dsx:get_ident=ident:p_vci',
	'dsx:mapping_type=memory',
   ],
)
