
# -*- python -*-

Module('caba:vci_xcache_wrapper',
	classname = 'soclib::caba::VciXcacheWrapper',
	tmpl_parameters = [
		parameter.Module('vci_param', default = 'vci_param'),
		parameter.Module('iss_t'),
		],
	header_files = [
		'../source/include/vci_xcache_wrapper.h',
		],
	implementation_files = [
		'../source/src/vci_xcache_wrapper.cpp',
		],
	uses = [
		Uses('caba:base_module'),
		Uses('caba:generic_fifo'),
		Uses('common:iss2'),
		Uses('common:mapping_table'),
		Uses('caba:generic_fifo'),
		],
	ports = [
		Port('vci_initiator', 'p_vci'),
		Port('bit_in','p_irq', parameter.Constant('n_irq')),
		Port('bit_in', 'p_resetn', auto = 'resetn'),
		Port('clock_in', 'p_clk', auto = 'clock'),
		],
	instance_parameters = [
		parameter.Int('ident'),
		parameter.Module('mt', 'common:mapping_table', auto='env:mapping_table'),
		parameter.IntTab('index'),
		parameter.Int('icache_sets'),
		parameter.Int('icache_words'),
		parameter.Int('icache_ways'),
		parameter.Int('dcache_sets'),
		parameter.Int('dcache_words'),
		parameter.Int('dcache_ways'),
		],
	extensions = [
		'dsx:get_ident=index:p_vci',
		'dsx:cpu=wrapper:iss_t',
		'dsx:mapping_type=processor',
   		],
#	   debug = True,
)
