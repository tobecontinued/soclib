	 signal = 'caba:vci_ring',
	 header_files = ['../source/include/vci_ring_ports.h'],
	 uses = [
	Uses('caba:vci_param'),
	]
	 )

PortDecl('caba:vci_ring_out',
	 classname = 'soclib::caba::RingOUTPort',
	 signal = 'caba:vci_ring',
	 header_files = ['../source/include/vci_ring_ports.h'],
	 uses = [
	Uses('caba:vci_param'),
	]
	 )
