
# -*- python -*-

vci_params = dict(
	cell_size = 4,
	plen_size = 1,
	addr_size = 32,
	rerror_size = 1,
	clen_size = 1,
	rflag_size = 1,
	srcid_size = 8,
	pktid_size = 1,
	trdid_size = 1,
	wrplen_size = 1
	)

todo = Platform(
	Uses('mipsel'),
	Uses('vci_multi_ram', **vci_params),
	Uses('vci_multi_tty', **vci_params),
	Uses('vci_vgmn', **vci_params),
	Uses('vci_xcache', **vci_params),
	Uses('vci_fd_access', **vci_params),
	Uses('vci_simhelper', **vci_params),
	Source('top.cc'),
)
